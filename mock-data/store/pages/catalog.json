{
  "site": {
    "title": "Mobi Store",
    "slug": "store"
  },
  "page": {
    "title": "Catalog",
    "heading": "Explore the complete collection",
    "description": "Browsing live products from the MobiCMS furniture API."
  },
  "filters": {
    "groups": [
      {
        "title": "Sort",
        "options": [
          { "label": "Featured", "query": "sortBy=priority&sortDesc=true" },
          { "label": "Name: A to Z", "query": "sortBy=name&sortDesc=false" },
          { "label": "Newest", "query": "sortBy=createdAt&sortDesc=true" }
        ]
      }
    ]
  },
  "products": {
    "provider": "http",
    "url": "https://api.mobicms.com.br/api/furnitures?pageSize=100&pageIndex=0",
    "method": "GET",
    "headers": {
      "Authorization": "Bearer {{env.MOBI_API_TOKEN}}"
    }
  }
}
